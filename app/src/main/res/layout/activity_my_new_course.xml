<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.edu.sjzc.student.uiActivity.MyEvaluationHistoryActivity">

    <LinearLayout
        android:id="@+id/upmost"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:background="#4169E1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:gravity="center_horizontal">

            <FrameLayout
                android:id="@+id/frameLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_weight="0">

                <ImageButton
                    android:id="@+id/about_newcourse_back"
                    android:layout_width="18dp"
                    android:layout_height="25dp"
                    android:background="#00000000"
                    android:src="@drawable/activity_back_selector" />
            </FrameLayout>

            <TextView
                android:id="@+id/my_evaluation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:paddingBottom="7dp"
                android:paddingTop="12dp"
                android:text="新留言"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:layout_weight="0">

                <ProgressBar
                    android:id="@+id/newcourse_show_progress"
                    android:layout_width="30dp"
                    android:layout_gravity="right"
                    android:layout_height="30dp"
                    android:visibility="gone" />
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>

    <cn.edu.sjzc.teacher.layout.PullToRefreshLayout
        android:id="@+id/refresh_newcourse_view"
        android:layout_width="match_parent"
        android:background="#DCDCDC"
        android:layout_height="match_parent">

        <include layout="@layout/refresh_head" />

        <cn.edu.sjzc.teacher.view.PullableListView
            android:id="@+id/newcourse_course_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DCDCDC"
            android:dividerHeight="1px" />

        <include layout="@layout/load_more" />

    </cn.edu.sjzc.teacher.layout.PullToRefreshLayout>
</LinearLayout>
